<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>lunOptics.rmSharp</PackageId>
    <Title>rmSharp </Title>
    <Version>0.9.0</Version>
    <Authors>luni64</Authors>
    <Company>lunOptics</Company>
    <Description>Entity Framwork ORM for databases generated by RootsMagic</Description>
    <PackageProjectUrl>https://github.com/luni64/rmSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/luni64/rmSharp</RepositoryUrl>
    <PackageTags>genealogy;rootsmagic;Entity Framework;</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DelegateDecompiler" Version="0.34.0" />
    <PackageReference Include="DelegateDecompiler.EntityFrameworkCore5" Version="0.34.0" />
    <PackageReference Include="Geolocation" Version="1.2.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.6" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.6">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Proxies" Version="8.0.6" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="8.0.6" />
  </ItemGroup>

  <ItemGroup>
    <None Update="unifuzz64.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
